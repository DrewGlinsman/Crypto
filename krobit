#korbit pricing stuff
#btc price
parameter = {'currency_pair': 'btc_krw'}
korBTCData = requests.get('https://api.korbit.co.kr/v1/ticker', params = parameter)
korBTC = korBTCData.json()["last"]

#XRP korbit price ratio
parameter = {'currency_pair': 'xrp_krw'}
korXRPData = requests.get('https://api.korbit.co.kr/v1/ticker', params = parameter)
korXRP = korXRPData.json()["last"]
korXRPRatio = int(korXRP)/int(korBTC)
print('korXRP: ' + str(korXRPRatio))

#ETH korbit price ratio
parameter = {'currency_pair': 'eth_krw'}
korETHData = requests.get('https://api.korbit.co.kr/v1/ticker', params=parameter)
korETH = korETHData.json()["last"]
korETHRatio = int(korETH)/int(korBTC)
print('korETH: ' + str(korETHRatio))

